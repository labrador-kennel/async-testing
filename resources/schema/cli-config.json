{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://labrador-kennel.io/dev/async-unit/schema/cli-config.json",
  "title": "AsyncUnitCliConfig",
  "description": "Declares the format of a valid asyncunit.json file to run AsyncUnit tests.",
  "type": "object",
  "properties": {
    "testDirectories": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "resultPrinter": {
      "type": "string",
      "minLength": 1
    },
    "mockBridge": {
      "type": "string",
      "minLength": 1
    }
  },
  "required": ["testDirectories", "resultPrinter"],
  "additionalProperties": false
}