#!/usr/bin/php
<?php

require_once dirname(__DIR__) . '/vendor/autoload.php';

use Symfony\Component\Console\Application as ConsoleApplication;

$repo = new \SebastianFeldmann\Git\Repository(dirname(__DIR__));
$version = $repo->getInfoOperator()->getCurrentCommitHash();
$application = new ConsoleApplication('async-testing', substr($version, 0, 7));

$application->add(new \Cspray\Labrador\AsyncTesting\CliTool\Command\RunTestsCommand($version));

$application->run();